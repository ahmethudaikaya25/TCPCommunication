<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_tcp_communication"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.ahk.tcpcommunication.features.login.Login"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_chats"
            app:destination="@id/chats" />
    </fragment>

    <fragment
        android:id="@+id/chats"
        android:name="com.ahk.tcpcommunication.features.chats.Chats"
        android:label="Chats"
        tools:layout="@layout/fragment_chats"/>
</navigation>